<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_list_row"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_list_row"
    android:paddingStart="?listPreferredItemPaddingLeft"
    android:paddingEnd="?listPreferredItemPaddingRight"
    android:paddingTop="@dimen/padding_list_row"
    tools:background="@color/material_deep_purple_700">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginEnd="72dp"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_width_height"
            android:layout_height="@dimen/icon_width_height"
            android:foregroundGravity="center_vertical"
            android:contentDescription="@string/user_icon"
            tools:src="@drawable/ic_account_circle_black_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingStart="72dp"
            android:paddingEnd="@dimen/padding_list_row">

            <TextView
                android:id="@+id/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="ABCabc"
                android:textSize="18sp"
                android:textColor="@color/github__solid_white"/>

            <TextView
                android:id="@+id/text_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                tools:text="ABCabc"
                android:textColor="@color/github__solid_white"
                android:textSize="@dimen/text_secondary" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
