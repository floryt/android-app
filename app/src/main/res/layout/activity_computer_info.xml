<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.floryt.app.ComputerInfoActivity">

    <TextView
        android:id="@+id/computer_name"
        android:text="@string/name_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_margin"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/users_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/computer_name"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/users_header"
        android:textSize="24sp"/>

    <ListView
        android:id="@+id/usersListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/users_header"/>


</RelativeLayout>
