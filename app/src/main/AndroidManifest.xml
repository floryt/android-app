<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.floryt.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/floryt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/floryt"
        android:supportsRtl="true"
        android:theme="@style/PurpleTheme">

        <activity
            android:name="com.floryt.app.LoginActivity"
            android:label="@string/title_activity_login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.floryt.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/PurpleTheme.NoActionBar">
        </activity>
    </application>

</manifest>